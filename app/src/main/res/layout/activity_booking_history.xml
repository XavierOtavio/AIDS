<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_gap_transparent"
    android:dividerHeight="8dp"
    android:paddingHorizontal="0dp"
    android:showDividers="middle"
    android:background="@color/white"
    tools:context=".Booking.BookingHistory.BookingHistoryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_booking_history_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24">

        <TextView
            android:id="@+id/toolbar_booking_history_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/booking_history_filters"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:contentDescription="@string/filters"
            android:layout_gravity="end"
            android:paddingHorizontal="12dp"
            android:src="@drawable/baseline_filter_list_24" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/internetConnectionWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_booking_history_list"
        android:layout_marginBottom="8dp"
        android:background="@color/pending"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="2dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/internetConnectionWarningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_connection"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emptyBookingList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/magnifying_glass"
            android:layout_marginVertical="0dp"
            android:layout_marginHorizontal="100dp" />

        <TextView
            android:id="@+id/emptyBookingListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Sem reservas passadas"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/emptyBookingListSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="O seu histórico de reservas irá aparecer aqui!"
            android:textColor="#838282"
            android:textSize="20sp"
            android:layout_marginHorizontal="30dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/internetConnectionWarning"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:paddingHorizontal="8dp"
        tools:listitem="@layout/list_item_booking" />

</RelativeLayout>